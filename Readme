# Stanford Dogs Dataset
Contains images and annotations for 120 dog breeds.


# 1. 进入工作目录
cd /home/ma-user/work

# 2. 克隆仓库元数据（不下载文件）
git clone --filter=blob:none --no-checkout https://github.com/OliLov/Stanford-Dogs-YOLO.git

# 3. 进入项目目录
cd Stanford-Dogs-YOLO

# 4. 启用稀疏检出（只拉取指定路径）
git sparse-checkout init --cone
git sparse-checkout set YOLO

# 5. 检出文件（开始下载所有图像和标签）
git checkout


----------------------------------------------------------------------------------------------------------------------------------


# 1. 创建目标目录结构
DATASET_DIR="/home/ma-user/work/mindyolo/data/stanford_dogs"
mkdir -p $DATASET_DIR/{images,labels}/{train,val,test}

# 2. 复制训练集
cp /home/ma-user/work/Stanford-Dogs-YOLO/YOLO/Train/*.jpg /home/ma-user/work/mindyolo/data/stanford_dogs/images/train/
cp /home/ma-user/work/Stanford-Dogs-YOLO/YOLO/Train/*.txt /home/ma-user/work/mindyolo/data/stanford_dogs/labels/train/

# 3. 复制验证集
cp /home/ma-user/work/Stanford-Dogs-YOLO/YOLO/Validation/*.jpg /home/ma-user/work/mindyolo/data/stanford_dogs/images/val/
cp /home/ma-user/work/Stanford-Dogs-YOLO/YOLO/Validation/*.txt /home/ma-user/work/mindyolo/data/stanford_dogs/labels/val/

# 4. 复制测试集
cp /home/ma-user/work/Stanford-Dogs-YOLO/YOLO/Test/*.jpg /home/ma-user/work/mindyolo/data/stanford_dogs/images/test/
cp /home/ma-user/work/Stanford-Dogs-YOLO/YOLO/Test/*.txt /home/ma-user/work/mindyolo/data/stanford_dogs/labels/test/


# 最终目录结构
/home/ma-user/work/mindyolo/
├── data/
│   └── stanford_dogs/
│       ├── images/
│       │   ├── train/
│       │   ├── val/
│       │   └── test/
│       ├── labels/
│       │   ├── train/
│       │   ├── val/
│       │   └── test/
│       └── data.yaml
├── configs/
└── train.py


----------------------------------------------------------------------------------------------------------------------------------



生成 data.yaml 配置文件

# 进入数据集目录
cd /home/ma-user/work/mindyolo/data/stanford_dogs

# 从 classes.txt 自动生成 data.yaml
python3 -c "
with open('/home/ma-user/work/Stanford-Dogs-YOLO/classes.txt') as f:
    names = [line.strip() for line in f.readlines()]
print(f'''train: ./images/train
val: ./images/val
test: ./images/test
nc: {len(names)}
names: [{', '.join([f'\"{name}\"' for name in names])}]
''')
" > data.yaml

----------------------------------------------------------------------------------------------------------------------------------
# 修改 yolov8m.yaml 配置文件
cd /home/ma-user/work/mindyolo
nano configs/yolov8/yolov8m.yaml
----------------------------------------------------------------------------------------------------------------------------------
# 训练命令
cd /home/ma-user/work/mindyolo
python train.py \
  --config configs/yolov8/yolov8m.yaml \
  --data data/stanford_dogs/data.yaml \
  --batch-size 8 \
  --epochs 100
----------------------------------------------------------------------------------------------------------------------------------
cd /home/ma-user/work/mindyolo
python train.py --config configs/yolov8/yolov8m.yaml --per_batch_size 2 --epochs 100
----------------------------------------------------------------------------------------------------------------------------------

